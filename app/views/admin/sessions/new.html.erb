<section class="simple-page">
  <h2>Entrar no painel</h2>
  <%= form_with url: admin_login_path, local: true, class: "card-form" do |f| %>
    <div>
      <%= label_tag :email, "E-mail" %>
      <%= email_field_tag :email, nil, required: true %>
    </div>
    <div>
      <%= label_tag :password, "Senha" %>
      <%= password_field_tag :password, nil, required: true %>
    </div>
    <%= submit_tag "Entrar", class: "cta" %>
  <% end %>
</section>
