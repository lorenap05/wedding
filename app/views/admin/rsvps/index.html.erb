<h2>Confirmações de presença</h2>
<table>
  <thead><tr><th>Nome</th><th>Vai?</th><th>Criado em</th></tr></thead>
  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.name %></td>
        <td><%= rsvp.attending ? 'Sim' : 'Não' %></td>
        <td><%= l(rsvp.created_at, format: :short) rescue rsvp.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
