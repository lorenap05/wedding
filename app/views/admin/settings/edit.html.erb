<section class="simple-page">
  <h2>Configurações da conta admin</h2>
  <p>Use esta tela para trocar a senha antes de publicar o site.</p>

  <%= form_with model: @admin_user, url: admin_settings_path, method: :patch, local: true, class: "card-form" do |f| %>
    <div>
      <%= f.label :current_password, "Senha atual" %>
      <%= f.password_field :current_password, required: true %>
    </div>

    <div>
      <%= f.label :password, "Nova senha" %>
      <%= f.password_field :password, required: true, minlength: 8 %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirmar nova senha" %>
      <%= f.password_field :password_confirmation, required: true, minlength: 8 %>
    </div>

    <%= f.submit "Salvar nova senha", class: "cta" %>
  <% end %>
</section>
